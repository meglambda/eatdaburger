<h1>Burgers</h1>

<h2>Burgers That are not eaten!</h2>

<ul>
  {{#each daburger}}
    {{#unless devoured}}
      {{this.burgername}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are eaten!</h2>

<ul>
  {{#each daburger}}
    {{#if devoured}}
     {{this.burgername}}
      
    {{/if}}
     
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Not eaten <br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
